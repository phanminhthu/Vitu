<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="@dimen/_10sdp"
        android:orientation="vertical">

        <android.support.v7.widget.AppCompatTextView
            android:layout_width="match_parent"
            android:layout_height="@dimen/_45sdp"
            android:background="@color/colorMain"
            android:gravity="center"
            android:text="Cập nhật tài khoản"
            android:textColor="@color/white" />

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/_45sdp"
            android:layout_marginTop="@dimen/_10sdp"
            android:scrollbars="none">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true">

                <LinearLayout
                    android:id="@+id/mLinearProfile"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/_10sdp"
                    android:layout_marginRight="@dimen/_10sdp"
                    android:layout_marginTop="@dimen/_40sdp"
                    android:background="@drawable/bg_shadow_add"
                    android:orientation="vertical">

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mTvName"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="@dimen/_50sdp"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Tên"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />

                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mTvPhone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="SĐT"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mTvGender"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Giới tính"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mTvBirthday"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Năm sinh"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mTvSchool"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Trường"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_10sdp" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mTvHomeTown"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:hint="Quê quán"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />


                    <android.support.v7.widget.AppCompatEditText
                        android:id="@+id/mTvDegree"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview"
                        android:text="Phân loại"
                        android:textColor="@color/black"
                        android:textSize="@dimen/_11sdp" />

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Môn"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/mTvCaseClass"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />
                    </RelativeLayout>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/bg_shadow_textview">

                        <android.support.v7.widget.AppCompatTextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:text="Kinh Nghiệm"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />

                        <android.support.v7.widget.AppCompatTextView
                            android:id="@+id/mTvExperience"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_alignParentRight="true"
                            android:layout_alignParentTop="true"
                            android:textColor="@color/black"
                            android:textSize="@dimen/_11sdp" />
                    </RelativeLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="2">

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_shadow">

                            <ImageView
                                android:background="@drawable/unknown_avatar"
                                android:id="@+id/mImgCMT"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mImgCMT"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="CMND" />
                        </RelativeLayout>

                        <RelativeLayout
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:background="@drawable/bg_shadow">

                            <ImageView
                                android:id="@+id/mImgBangCap"
                                android:layout_width="90dp"
                                android:layout_height="90dp"
                                android:background="@drawable/unknown_avatar"
                                android:layout_centerHorizontal="true" />

                            <TextView
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_below="@+id/mImgBangCap"
                                android:layout_centerHorizontal="true"
                                android:layout_marginTop="2dp"
                                android:text="Bằng tốt nghiệp" />
                        </RelativeLayout>
                    </LinearLayout>

                </LinearLayout>

                <danazone.com.vitu.CircleImageView
                    android:id="@+id/mImgAvatar"
                    android:layout_width="@dimen/_90sdp"
                    android:layout_height="@dimen/_90sdp"
                    android:layout_centerHorizontal="true"
                    android:src="@drawable/banner" />
            </RelativeLayout>
        </ScrollView>
    </LinearLayout>

    <android.support.v7.widget.AppCompatTextView
        android:id="@+id/mTvSubmit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="@dimen/_10sdp"
        android:layout_marginLeft="@dimen/_40sdp"
        android:layout_marginRight="@dimen/_40sdp"
        android:layout_weight="1"
        android:background="@drawable/bg_button_main"
        android:gravity="center"
        android:text="Cập nhật"
        android:textColor="@color/white"
        android:textStyle="bold" />
</RelativeLayout>
